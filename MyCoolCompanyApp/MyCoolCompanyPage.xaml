<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="MyCoolCompanyApp.MyCoolCompanyPage">
	<ContentPage.Content>
		<Grid>	
			<Image Opacity="1"
				Source="image_bg.png"
				Aspect="AspectFill"/>
				 
			<StackLayout Orientation="Horizontal" Spacing="0" VerticalOptions="Center" HorizontalOptions="FillAndExpand" HeightRequest="150"  BackgroundColor="#77000000" >
			
			<Image WidthRequest="80"
				Opacity="0.8"
				Source="image_hero_bw.png"
				Aspect="AspectFill" Scale="1" />
			
			<BoxView BackgroundColor="#f50057" WidthRequest="2"></BoxView>
				
				<Grid HorizontalOptions="Start"  Padding="20"  VerticalOptions="Center"  >
					<Label TextColor="White" Text="My Cool3 Company Name." 
					FontAttributes="Bold" FontSize="30" />

				</Grid>


			</StackLayout>
			<StackLayout Padding="20" VerticalOptions="End" Spacing="10">

            <Button Text="get inside2"  TextColor="White"  BackgroundColor="#f50057" HeightRequest="100" VerticalOptions="End" Image="icon.png" ContentLayout="Top,5">
                
            </Button>
			<Label Text="just some dummy text here." HorizontalTextAlignment="Center" FontSize="12" TextColor="White"></Label>
			</StackLayout>
		</Grid>

	</ContentPage.Content>
</ContentPage>
