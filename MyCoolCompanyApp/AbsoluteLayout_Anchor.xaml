             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCoolCompanyApp.AbsoluteLayout_Anchor">
  <ContentView.Content>
      <AbsoluteLayout BackgroundColor="Pink" >
            <BoxView AbsoluteLayout.LayoutBounds="1,1,.2,.1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Gray"></BoxView>
            <BoxView AbsoluteLayout.LayoutBounds=".375,1,.2,.1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Black"></BoxView>
            <BoxView AbsoluteLayout.LayoutBounds=".5,.5,.2,.2" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Red"></BoxView>
            <BoxView AbsoluteLayout.LayoutBounds="0,.5,1,.001" AbsoluteLayout.LayoutFlags="All" BackgroundColor="White"></BoxView>
            <BoxView AbsoluteLayout.LayoutBounds=".5,.5,.002,1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="White"></BoxView>
        </AbsoluteLayout>
  </ContentView.Content>
</ContentView>